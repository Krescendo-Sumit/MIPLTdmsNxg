<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_upload_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_20"
                        android:layout_marginBottom="@dimen/dp_20">

                        <Button
                            android:id="@+id/btnUploadAllData"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/buttonbordet"
                            android:drawableLeft="@drawable/upload"
                            android:text="Upload All Data" />

                        <TextView
                            android:id="@+id/tv_upload_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload status.."
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginBottom="@dimen/dp_20"
                            android:textColor="@color/black"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"

                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <RadioGroup
                            android:id="@+id/rel_top"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">


                            <RadioButton
                                android:id="@+id/rbtsowing"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textSize="18sp" />


                            <RadioButton
                                android:id="@+id/rbtobservation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/rbtobservationImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textSize="18sp" />


                        </RadioGroup>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rel_top"

                            android:gravity="center">

                            <Button
                                android:id="@+id/btnUpload"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/buttonbordet"
                                android:drawableLeft="@drawable/upload"
                                android:padding="5dp"
                                android:text="Upload Data" />
                        </RelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_top1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_top"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"

                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rel_top2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="UPLOAD MY TRAVEL DATA"

                            android:textColor="#4C4C4C"
                            android:textStyle="bold"></TextView>

                        <RadioGroup
                            android:id="@+id/radGrp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rnd1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:enabled="false"
                                android:fontFamily="sans-serif"
                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textColorLink="@android:color/black"

                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/rnd2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:enabled="false"
                                android:fontFamily="sans-serif"

                                android:text="Pending retailer and distributor data"
                                android:textColor="#4C4C4C"
                                android:textColorLink="@android:color/black"
                                android:textSize="18sp"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rnd3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:enabled="false"

                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textColorLink="@android:color/black"
                                android:textSize="18sp" />


                        </RadioGroup>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/radGrp2"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnUpload2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/buttonbordet"
                                android:drawableLeft="@drawable/upload"
                                android:padding="5dp"
                                android:text="Upload Travel Data" />
                            />

                        </RelativeLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin_top1"
                android:orientation="vertical"
                android:visibility="visible">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"

                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rel_pld_sown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="UPLOAD PLD Sown Data"

                            android:textColor="#4C4C4C"
                            android:textStyle="bold"></TextView>

                        <RadioGroup
                            android:id="@+id/radGrpPLD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rndPLD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:enabled="false"
                                android:fontFamily="sans-serif"
                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textColorLink="@android:color/black"
                                android:textSize="18sp" />


                        </RadioGroup>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/radGrpPLD"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnUploadPLDSown"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/buttonbordet"
                                android:drawableLeft="@drawable/upload"
                                android:padding="5dp"
                                android:text="Upload PLD Sown Data" />
                            />

                        </RelativeLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/feedbackUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pld"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"

                    android:visibility="visible">

                    <RelativeLayout
                        android:id="@+id/rel_feedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="UPLOAD Feedback Data"
                            android:textColor="#4C4C4C"
                            android:textStyle="bold">

                        </TextView>

                        <RadioGroup
                            android:id="@+id/radGrpFeedback"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/rndFbk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:enabled="false"
                                android:fontFamily="sans-serif"
                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textColorLink="@android:color/black"
                                android:textSize="18sp" />

                            <RadioButton
                                android:id="@+id/rndFdbkNew"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:enabled="false"
                                android:fontFamily="sans-serif"
                                android:text=""
                                android:textColor="#4C4C4C"
                                android:textColorLink="@android:color/black"
                                android:textSize="18sp" />


                        </RadioGroup>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_below="@+id/radGrpFeedback"
                            android:gravity="center">

                            <Button
                                android:id="@+id/btnUploadFeedback"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/buttonbordet"
                                android:drawableLeft="@drawable/upload"
                                android:text="Upload Feedback Data" />
                            />

                        </RelativeLayout>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rainfallupload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/feedbackUpload"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"

                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnUploadRainfall"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/buttonbordet"
                            android:drawableLeft="@drawable/upload"
                            android:text="Upload Rainfall Data" />
                    </LinearLayout><![CDATA[

                    />


                ]]>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>


</LinearLayout>