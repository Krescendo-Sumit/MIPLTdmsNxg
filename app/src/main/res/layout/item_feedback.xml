<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="2dp">

        <RelativeLayout
            android:id="@+id/rel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <LinearLayout
                android:id="@+id/layoutshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_trialcode"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Trial Code"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_TrialCodedetails"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_trialcode"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txt_TotalObservation"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Location"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_LocationDetails"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">
                <TextView
                    android:id="@+id/txt_village"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:padding="3dp"
                    android:text="Village"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_village_details"
                    android:layout_width="0dp"
                    android:layout_weight="7"                              android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_TrialSegment"
                    android:layout_width="0dp"
                    android:layout_weight="3"                          android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_TrialTag"
                    android:padding="3dp"
                    android:text="Segment"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_TrialSegmentDetails"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/txt_TrialTag"
                    android:layout_width="0dp"
                    android:layout_weight="3"                            android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:padding="3dp"
                    android:text="Current Stage"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_current_stage"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="10"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_das"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:padding="3dp"
                    android:text="DAS"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text=":"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_das_details"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="3dp"
                    android:text=""
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnPLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textAlignment="center"
                    android:text="Not Sown / PLD"
                    android:textSize="12sp"
                    android:background="@drawable/buttonbordet"
                    android:drawableTint="@color/lightblack"
                    android:layout_marginLeft="90dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>