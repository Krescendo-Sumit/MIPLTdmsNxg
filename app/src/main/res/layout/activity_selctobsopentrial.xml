<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="2dp"
        android:layout_marginLeft="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/dp_25">

        <LinearLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:id="@+id/tv_tag_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="tag_type"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:textColor="@color/red"
                android:layout_marginLeft="@dimen/dp_20"/>

            <LinearLayout
                android:id="@+id/layoutshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_trialcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Trial Code   :"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_TrialCodedetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_trialcode"
                    android:padding="3dp"
                    android:text="Order Id"
                    android:textSize="15sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_TotalObservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:padding="3dp"
                    android:text="Location      :"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_LocationDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="3dp"
                    android:text="obser"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_TrialTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:padding="3dp"
                    android:text="Tagged        :"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_TrialTagDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="3dp"
                    android:text="obser"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_TrialSegment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_TrialTag"
                    android:padding="3dp"
                    android:text="Segment     :"
                    android:textSize="15sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_TrialSegmentDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="3dp"
                    android:text="obser"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnPLD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textAlignment="center"
                    android:text="Not Sown / PLD"
                    android:textSize="12sp"
                    android:background="@drawable/buttonbordet"
                    android:drawableTint="@color/lightblack"
                    android:layout_marginLeft="90dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Farmer Name   :"
            android:textSize="15sp"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/tv_farmer_name"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_trialcode"
            android:padding="3dp"
            android:text="Farmer Name"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_fvillage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Village Name   :"
            android:textSize="15sp"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/tv_village_name"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_trialcode"
            android:padding="3dp"
            android:text="Village Name"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="DOS   :"
            android:textSize="15sp"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/tv_dos"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_trialcode"
            android:padding="3dp"
            android:text="DOS"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_dot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:weightSum="10">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="DOT   :"
            android:textSize="15sp"
            android:textColor="@color/Black"/>
        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_trialcode"
            android:padding="3dp"
            android:text="DOT"
            android:textSize="15sp"
            android:textColor="@color/Black"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_select_obs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:text="Select Observation"
        android:textSize="@dimen/sp_16"
        android:textAllCaps="false"
        android:background="@drawable/buttonbordet"
        android:drawableTint="@color/lightblack"
        android:layout_margin="@dimen/dp_30"/>

    <Button
        android:id="@+id/btn_open_trial"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:text="Open Trial"
        android:textAllCaps="false"
        android:textSize="@dimen/sp_16"
        android:background="@drawable/buttonbordet"
        android:drawableTint="@color/lightblack"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"/>

</LinearLayout>