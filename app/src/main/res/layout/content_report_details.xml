<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearMaster"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fitsSystemWindows="true"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="2dp">

        <RelativeLayout
            android:id="@+id/rel_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/layoutshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_trialcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Trial Code           :"
                    android:textSize="16sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_trialcodeValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txt_trialcode"
                    android:padding="5dp"
                    android:text="Order Id"
                    android:textSize="16sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_Fname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:padding="5dp"
                    android:text="Farmer Name     :"
                    android:textSize="16sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_FarmerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_trialcode"
                    android:layout_toRightOf="@+id/txt_Fname"
                    android:padding="5dp"
                    android:text="Order Id shdskjdhksjhdkshdshdshdsjhdsjhdshds"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_Loca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Fname"
                    android:padding="5dp"
                    android:text="Location              :"
                    android:textSize="16sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_Location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_FarmerName"
                    android:layout_toRightOf="@+id/txt_Loca"
                    android:padding="5dp"
                    android:text="Order Id"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Loca"
                    android:padding="5dp"
                    android:text="Observations      :"
                    android:textSize="16sp"
                    android:textColor="@color/Black"/>

                <TextView
                    android:id="@+id/txt_Observation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_Location"
                    android:layout_toRightOf="@+id/tv_status"
                    android:drawablePadding="5dp"
                    android:padding="5dp"
                    android:text="Order Id"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/Black"/>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>