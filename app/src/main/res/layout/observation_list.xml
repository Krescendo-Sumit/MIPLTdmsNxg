<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:fitsSystemWindows="true"
            card_view:cardCornerRadius="3dp"
            card_view:contentPadding="2dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/OBlblName"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ObsVariableID"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ObsordinalCondition"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ObsMultiple"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/lbls"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:fontFamily="sans-serif"
                    android:text=": "
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/border_style"
                    android:fontFamily="sans-serif"
                    android:maxEms="100"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/OBSpn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/border_style"
                    android:fontFamily="sans-serif"
                    android:inputType="numberDecimal"
                    android:maxEms="100"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <Spinner
                    android:id="@+id/SPNOBS"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/spinner_background" />

                <EditText
                    android:id="@+id/txt1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:background="@drawable/border_style"
                    android:digits="0123456789."
                    android:fontFamily="sans-serif"
                    android:hint="P1"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:nextFocusDown="@id/txt2"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt1"
                    android:background="@drawable/border_style"
                    android:digits="0123456789."
                    android:fontFamily="sans-serif"
                    android:hint="P2"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:nextFocusDown="@id/txt3"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt1"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="5px"
                    android:background="@drawable/border_style"
                    android:digits="0123456789."
                    android:fontFamily="sans-serif"
                    android:hint="P3"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:nextFocusDown="@id/txt4"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5px"
                    android:layout_toRightOf="@+id/txt3"
                    android:background="@drawable/border_style"
                    android:digits="0123456789."
                    android:fontFamily="sans-serif"
                    android:hint="P4"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:nextFocusDown="@id/txt5"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt5"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt3"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="5px"
                    android:background="@drawable/border_style"
                    android:digits="0123456789."
                    android:fontFamily="sans-serif"
                    android:hint="P5"
                    android:inputType="numberDecimal"
                    android:maxLength="10"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />

                <!--Added on 10th August 2021-->
                <LinearLayout
                    android:id="@+id/layout_sp_mtl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt5"
                    android:orientation="vertical"
                    android:layout_marginLeft="180dp"
                    android:visibility="visible">

                    <RadioGroup
                        android:id="@+id/rg_sp_ml"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rb_sp_ml_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"/>

                        <RadioButton
                            android:id="@+id/rb_sp_ml_manual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Manual"/>

                    </RadioGroup>

                    <TextView
                        android:id="@+id/tv_manual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Plot"
                        android:padding="5dp"
                        android:drawableRight="@drawable/if_ic_keyboard_arrow_down_48px_352466"
                        android:background="@drawable/border_green"
                        android:visibility="gone"
                        android:fontFamily="sans-serif"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:id="@+id/layout_sp_tv"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/OBlblname1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:fontFamily="sans-serif"
                android:text=" "
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/lbl2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:fontFamily="sans-serif"
                android:text=": "
                android:textColor="@android:color/black"
                android:textColorLink="@android:color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/OBtxtData"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:background="@drawable/border_style"
                android:digits="0123456789."
                android:ems="10"
                android:hint=""
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColorLink="@android:color/black" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>