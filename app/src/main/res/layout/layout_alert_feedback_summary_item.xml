<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/layout3"
    android:layout_below="@id/layout1"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/layout_border"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/rel_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/lblTrial"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lblLocation"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="3.5"
                    android:fontFamily="sans-serif"
                    android:text="Trial Code"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txtTrialCodeAlert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtLocation"
                    android:layout_weight="6.5"
                    android:fontFamily="sans-serif"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="3.5"
                    android:fontFamily="sans-serif"
                    android:text="Plot No"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_red_dark"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/lblPlotNoAlert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtSowing"
                    android:layout_weight="6.5"
                    android:fontFamily="sans-serif"
                    android:text="0"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_red_dark"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txt_head"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:fontFamily="sans-serif"
                    android:text="Select Rank"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner_rate_alert"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/l2"
                        android:layout_toRightOf="@+id/txt_head"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background" />

                    <TextView
                        android:id="@+id/txt_rule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinner_rate_alert"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"

                        android:layout_marginTop="5dp"
                        android:layout_marginRight="30dp"
                        android:text="0: No Ranking \n 5: Highest Ranking"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/txtremarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:text="Comment"
                android:textColor="@color/Black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:text=":"
                android:textColor="@android:color/black"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6.5">

                <EditText
                    android:id="@+id/remarks_alert"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_below="@+id/txt_rule"
                    android:background="@drawable/border_style"
                    android:fontFamily="sans-serif"
                    android:gravity="top|left"
                    android:hint="Please share your remark"
                    android:inputType="textEmailAddress|textMultiLine"
                    android:lines="20"
                    android:minLines="5"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/layout_border"

        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_alert_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonbordet"
            android:text="Save"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_alert_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/buttonbordet"
            android:text="Back"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>
