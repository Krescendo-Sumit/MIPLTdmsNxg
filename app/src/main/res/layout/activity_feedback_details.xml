<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/layout_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/lblTrial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblLocation"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:text="Trial Code"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txtTrialCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtLocation"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="6"
                        android:fontFamily="sans-serif"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/txtSowing"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:text="Start Plot"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txt_main_start_plot_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/txtSowing"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="6"
                        android:fontFamily="sans-serif"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:text="end plot"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txt_main_end_plot_no"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="6"
                        android:fontFamily="sans-serif"
                        android:text="0"
                        android:textColor="@android:color/black"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/lblPlotNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblSowing"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="4"
                        android:fontFamily="sans-serif"
                        android:text="Current Plot No"
                        android:textAllCaps="true"
                        android:textColor="@android:color/holo_red_dark"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text=":"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/txt_main_plot_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtSowing"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="6"
                        android:fontFamily="sans-serif"
                        android:text="0"
                        android:textAllCaps="true"
                        android:textColor="@android:color/holo_red_dark"
                        android:textColorLink="@android:color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <EditText
                            android:id="@+id/txtEnerPlot"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_below="@+id/lblProduct"
                            android:layout_marginLeft="0dp"
                            android:background="@drawable/border_style"
                            android:fontFamily="sans-serif"
                            android:hint="Plot No"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:textColorLink="@android:color/black"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:text=":"
                        android:textColor="@color/Black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                        <Button
                            android:id="@+id/btnGo"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="0dp"
                            android:layout_toRightOf="@id/txtEnerPlot"
                            android:background="@drawable/buttonbordet"
                            android:padding="5dp"
                            android:text="GO" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_above="@+id/layout3"
        android:layout_below="@id/layout1"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/layout_border"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/rel_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txt_head"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif"
                    android:text="Select Rank"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinnerRank"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/selectyear"
                        android:layout_toRightOf="@+id/txt_head"
                        android:layout_weight="1"
                        android:background="@drawable/spinner_background" />

                    <TextView
                        android:id="@+id/txt_rule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/spinnerRank"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:text="1: Poor \n 5: Excellent"
                        android:textAlignment="center"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/txtremarks"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_rule"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Comment"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/remarks"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="90dp"
                    android:background="@drawable/border_style"
                    android:fontFamily="sans-serif"
                    android:gravity="top|left"
                    android:hint="Please share your remark"
                    android:inputType="textEmailAddress|textMultiLine"
                    android:lines="20"
                    android:minLines="5"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_date_of_visit_lbl"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_rule"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:text="Date of Visit"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:text=":"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/tv_date_of_visit"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="40dp"
                    android:background="@drawable/border_style"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical|left"
                    android:hint="Date of Visit"
                    android:lines="20"
                    android:minLines="5"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textColorLink="@android:color/black"
                    android:textSize="15sp"
                    android:drawableLeft="@drawable/calender"
                    android:inputType="date"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:weightSum="3">


            <Button
                android:id="@+id/btnSaveObs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1.5"
                android:background="@drawable/buttonbordet"
                android:text="Save and Next"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnNextOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="0.75"
                android:background="@drawable/buttonbordet"
                android:text="Next"
                android:textSize="15dp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.75"
                android:background="@drawable/buttonbordet"
                android:text="Back"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_btn_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/layout_border"
            android:gravity="center"
            android:layout_below="@id/layout_btn">

        <Button
            android:id="@+id/btnSaveFeedbackSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/buttonbordet"
            android:text="Feedback Summary"
            android:textSize="15dp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
